<div class="row">
    {{#each stories}}
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p>{{deleteHtmlTags body}}</p>
            </div>
            <div class="card-action">
                <a href="/stories"><i class="fas fa-arrow-left"></i> Go back</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>